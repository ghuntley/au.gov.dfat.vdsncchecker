<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout android:background="@drawable/detail_heading_panel" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textAppearance="?attr/textAppearanceSubtitle2" android:id="@+id/brand" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginBottom="6dp" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toTopOf="0"/>
        <TextView android:textAppearance="@style/TextAppearance.Detail.Heading.Label" android:id="@+id/vaccineCodeLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/vaccineCodeLabel" android:layout_marginEnd="@dimen/detail_table_margin" app:layout_constraintBottom_toTopOf="@+id/vaccineCode" app:layout_constraintEnd_toStartOf="@+id/columnGuideline" app:layout_constraintStart_toStartOf="0" app:layout_constraintTop_toBottomOf="@+id/brand"/>
        <TextView android:textAppearance="@style/TextAppearance.Detail.Heading.Value" android:id="@+id/vaccineCode" android:layout_width="0dp" android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="@+id/vaccineCodeLabel" app:layout_constraintStart_toStartOf="@+id/vaccineCodeLabel" app:layout_constraintTop_toBottomOf="@+id/headingBarrier"/>
        <androidx.constraintlayout.widget.Guideline android:orientation="vertical" android:id="@+id/columnGuideline" android:layout_width="wrap_content" android:layout_height="wrap_content" app:layout_constraintGuide_percent="0.5"/>
        <TextView android:textAppearance="@style/TextAppearance.Detail.Heading.Label" android:id="@+id/agentLabel" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/agentLabel" android:layout_marginStart="@dimen/detail_table_margin" app:layout_constraintBaseline_toBaselineOf="@+id/vaccineCodeLabel" app:layout_constraintEnd_toEndOf="0" app:layout_constraintStart_toStartOf="@+id/columnGuideline"/>
